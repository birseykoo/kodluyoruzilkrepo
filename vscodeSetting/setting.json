{
   "editor.renderWhitespace": "all",
   "editor.fontFamily": "'Fira Code','Cascadia Code', 'Consolas', 'Courier New','Droid Sans Mono', 'Droid Sans Fallback', OpenSans, sans-serif",
   "editor.fontLigatures": true,
   "terminal.integrated.fontFamily": "UbuntuMono Nerd Font",
   "terminal.integrated.cursorBlinking": true,
   "terminal.integrated.cursorStyle": "line",
   "terminal.integrated.cursorWidth": 2,
   "terminal.integrated.defaultProfile.windows": "Git Bash",
   "terminal.integrated.shellIntegration.enabled": true,
   "terminal.integrated.tabs.showActions": "singleTerminal",
   "terminal.integrated.fontSize": 18,
   "window.zoomLevel": -0.3,
   "editor.fontSize": 14,
   "editor.tabSize": 3,
   "editor.autoClosingBrackets": "beforeWhitespace",
   "editor.cursorSmoothCaretAnimation": true,
   "editor.minimap.maxColumn": 100,
   "window.autoDetectColorScheme": true
}